		</joint>
		<link name="${name}_left_spring_link">
			<!-- inertial>
				<mass value="0.1"/>
				<origin xyz="0 0 0.055"  />
				<cylinder_inertia radius="0.06" length="0.11" mass="0.1"/>
			</inertial -->
